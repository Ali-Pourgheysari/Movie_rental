@model List<RentalDetails>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Movie title</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Title</td>
                @if (Model[i].ReturnDate > DateTime.Now)
                {
                    <td>
                        <strong>
                            <span class="text-success">Active</span>
                        </strong>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-sm btn-primary">Return film</button>
                    </td>
                }
                else
                {
                    <td>
                        <strong>
                            <span class="text-danger">Inactive</span>
                        </strong>
                    </td>
                    <td>
                        <button disabled type="button" class="btn btn-sm btn-primary">Return film</button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
