@model List<FilmScoreCategory>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Film title</th>
            <th scope="col">Category</th>
            <th scope="col">Average score</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].FilmTitle</td>
                <td>
                    <a asp-controller="Shared" asp-action="ChosenCategory" asp-route-id="@Model[i].CategoryId">@Model[i].CategoryName</a>
                </td>
                <td>@Model[i].AvgScore.ToString("0.##")</td>
            </tr>
        }
    </tbody>
</table>