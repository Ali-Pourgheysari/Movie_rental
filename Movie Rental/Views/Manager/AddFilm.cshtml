@model List<Film>
<div class="wrap">
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Released year</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Title</td>
                <td>@Model[i].Description</td>
                <td>@Model[i].ReleaseYear</td>
                <td>
                    <form method="post">
                        <input name="filmId" type="text" value="@Model[i].Id" hidden />
                        <input name="storeId" type="text" value="@ViewBag.StoreId" hidden />
                        <button type="submit" class="btn btn-sm btn-success">&#x2b</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>