@model List<CheckReservation>
<div class="wrap">
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer name</th>
            <th scope="col">Film title</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].CustomerName</td>
                <td>@Model[i].Title</td>
                <td>
                    <div style ="display:flex;flex-direction:row;">
                        <form method="post" asp-controller="Manager" asp-action="CheckReservation" style="padding: 0px 5px;">
                            <input type="hidden" name="CustomerId" value="@Model[i].CustomerId" />
                            <input type="hidden" name="ReservationId" value="@Model[i].ReservationId" />
                            <input type="hidden" name="InventoryId" value="@Model[i].InventoryId" />
                            <button type="submit" class="btn btn-success">Submit</button>
                        </form>
                        <form method="post" asp-controller="Manager" asp-action="CheckReservation">
                            <input type="hidden" name="CustomerId" value="@Model[i].CustomerId" />
                            <input type="hidden" name="ReservationId" value="@Model[i].ReservationId" />
                            <input type="hidden" name="InventoryId" value="0" />
                            <button type="submit" class="btn btn-danger">Deny</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>